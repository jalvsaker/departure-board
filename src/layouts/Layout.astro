---
import DarkModeScript from "../components/DarkModeScript.astro";
import NavBar from "../components/NavBar.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Departure Board" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <DarkModeScript />
  </head>
  <body class="overflow-y-scroll dark:bg-gray-950 dark:text-white">
    <main
      class="mx-auto max-w-screen-lg min-h-screen pb-9 lg:border-x border-gray-400 dark:border-gray-800 relative"
    >
      <slot />
    </main>
    <NavBar />
  </body>
</html>
