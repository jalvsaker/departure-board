---
import DarkModeScript from "../components/DarkModeScript.astro";
import DarkModeButton from "../components/DarkModeButton.astro";
import { FaHome } from "react-icons/fa";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Departure Board" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <DarkModeScript />
  </head>
  <body class="overflow-y-scroll dark:bg-gray-950 dark:text-white">
    <div
      class="mx-auto lg:max-w-4xl min-h-screen lg:border-x dark:border-gray-800 relative"
    >
      <a href="/" class="left-1 top-1 absolute text-xl" aria-label="Home">
        <FaHome />
      </a>
      <DarkModeButton className="right-1 top-1 absolute text-xl" />
      <main>
        <slot />
      </main>
    </div>
  </body>
</html>
