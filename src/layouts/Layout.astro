---
import DarkModeScript from "../components/DarkModeScript.astro";
import DarkModeButton from "../components/DarkModeButton.astro";
import { FaHome, FaInfo } from "react-icons/fa";
import NavLink from "../components/NavLink.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Departure Board" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <DarkModeScript />
  </head>
  <body class="overflow-y-scroll dark:bg-gray-950 dark:text-white">
    <main
      class="mx-auto lg:max-w-4xl min-h-screen pb-9 lg:border-x border-gray-400 dark:border-gray-800 relative"
    >
      <slot />
    </main>
    <nav
      class="fixed bottom-0 left-0 right-0 flex justify-around dark:bg-gray-950 bg-white border-t border-gray-400 dark:border-gray-800"
    >
      <NavLink href="/" label="Home">
        <FaHome />
      </NavLink>
      <NavLink href="/about" label="About">
        <FaInfo />
      </NavLink>
      <DarkModeButton />
    </nav>
  </body>
</html>
